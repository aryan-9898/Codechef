#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int tes;cin>>tes;
	while(tes--){
	    long long n,m;
	    cin>>n>>m;
	    long long arr[n];
	    for(int i=0;i<n;i++){
	        cin>>arr[i];
	    }
	    long long s=0;
	    for(int i=0;i<n;i++){
	        s=s+max(abs(arr[i] - 1),abs(arr[i] - m));
	    }
	    
	    cout<<s<<"\n";
	}
	return 0;
}
